.post .header
	color: $red;

.sidebar-wrap
	margin: 0 auto;
	margin-bottom: 60px;

.sidebar
	float: left;
	display: none;
	margin-left: 40px;

	a
		color: $black;
		line-height: 1.7;
		font-size: 24px;			
		
.blog section
	margin-top: 60px;

@media all and (min-width: 400px)
	.blog-index-page, .category-archive-page
		.sidebar-wrap
			width: 85%;

@media all and (min-width: 500px)
	.blog-index-page, .category-archive-page
		.sidebar-wrap
			width: 450px;


@media all and (min-width: 700px)
	section .description
		font-size 1.3em

@media all and (min-width: 900px)
	.sidebar
		display: block;
			
@media all and (min-width: 1100px)
	.sidebar
		margin-left: 5%;