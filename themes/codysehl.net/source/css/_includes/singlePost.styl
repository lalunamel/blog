.single-post {
	width: $first-breakpoint-width;
	margin: 0 auto;

	.header {
		margin: 70px 0 10px 0;
		font-size: 36px;
		font-weight: 700;
		color: $red;
	}

	.date {
		color: #4b4b4b;
		font-size: 20px;
		font-weight: 500;
		text-align: left;
		margin-bottom: 10px;
	}

	.content {
		margin-top: 50px;
		font-size: 1.4em;
		line-height: 1.2;
		color: $calm-black;

		p {
			margin-bottom: 40px;
		}

		ul {
			list-style: disc;
			margin-left: 40px;

			li {
				margin-bottom: 20px;
			}
		}
	}
}

#disqus_thread {
	margin-top: 100px;
	padding-top: 60px;
}

em {
	font-style: oblique;
}

strong {
	font-weight: 600;
}

blockquote {
	margin: 0 20px 0 20px;
	padding-left: 40px;
	border-left: 6px solid $calm-blue;
	font-size: 90%;
	font-style: oblique;
	line-height: 1.2;
}

@media all and (min-width: 500px) {
	.single-post {
		width: 400px;
	}
}

@media all and (min-width: 700px) {
	.single-post {
		width: 450px;

		.content {
			font-size: 1.5em;
			line-height: 1.25;
		}
	}
}


@media all and (min-width: 900px) {
	.single-post {
		width: 500px;
		padding-left: 100px;
	}

	.single-post-page .sidebar-wrap {
		width: 800px;
	}
}

@media all and (min-width: 1100px) {
	.single-post {
		width: 600px;
		padding-left: 0;

		.header {
			font-size: 42px;
		}
	}

	.sidebar-wrap {
		width: 600px;
	}

	#disqus_thread {
		margin-top: 120px;
		padding-top: 70px;
	}
}