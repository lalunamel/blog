.single-post {
	width: $first-breakpoint-width;
	margin: 0 auto;

	.header {
		margin: 70px 0 10px 0;
		font-size: 36px;
		font-weight: 700;
		color: $red;
	}

	.date {
		color: #4b4b4b;
		font-size: 20px;
		font-weight: 500;
		text-align: left;
		margin-bottom: 10px;
	}

	.content {
		margin-top: 50px;
		font-size: 1.4em;
		line-height: 1.2;
		color: $calm-black;

		p {
			margin-bottom: 30px;
		}

		ul {
			list-style: disc;
			margin-left: 40px;
			margin-bottom: 30px;

			> li {
				list-style-type: disc;

				> ol {
					margin-bottom: 0px;
				}
			}
		}

		ol {
			margin-bottom: 30px;

			> li {
				list-style-type: decimal;
				margin-top: 16px;

				> ul {
					margin-bottom: 0px;
				}
			}
		}
	}
}

em {
	font-style: oblique;
}

strong {
	font-weight: 600;
}

sup {
	vertical-align: super;
	font-size: .6em;
	margin-left: 1px;
}

blockquote {
	margin: 0 20px 0 20px;
	padding-left: 40px;
	border-left: 6px solid $calm-blue;
	font-size: 90%;
	font-style: oblique;
	line-height: 1.2;
}

img {
	max-width: 100%;
}

h1 { 
	font-size: 2em; 
	font-weight: bold; 
	margin-top: .67em; 
	margin-bottom: .67em;
}

h2 { 
	font-size: 1.5em; 
	font-weight: bold; 
	margin-top: .83em; 
	margin-bottom: .83em;
}

h3 { 
	font-size: 1.17em; 
	font-weight: bold; 
	margin-top: 1em; 
	margin-bottom: 1em;
}

h4 { 
	font-weight: bold; 
	margin-top: 1.33em; 
	margin-bottom: 1.33em;
}

h5 { 
	font-size: .83em; 
	font-weight: bold; 
	margin-top: 1.67em; 
	margin-bottom: 1.67em;
}

h6 { 
	font-size: .67em; 
	font-weight: bold; 
	margin-top: 2.33em; 
	margin-bottom: 2.33em;
}

@media all and (min-width: 500px) {
	.single-post {
		width: 400px;
	}
}

@media all and (min-width: 700px) {
	.single-post {
		width: 450px;

		.content {
			font-size: 1.5em;
			line-height: 1.25;
		}
	}
}


@media all and (min-width: 900px) {
	.single-post {
		width: 500px;
		padding-left: 100px;
	}

	.single-post-page .sidebar-wrap {
		width: 800px;
	}
}

@media all and (min-width: 1100px) {
	.single-post {
		width: 600px;
		padding-left: 0;

		.header {
			font-size: 42px;
		}
	}

	.sidebar-wrap {
		width: 600px;
	}
}
